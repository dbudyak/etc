server {
  listen      80;
  server_name ideapad;
  access_log   /var/log/nginx/cashhero/access.log;
  rewrite     ^   https://$server_name$request_uri? permanent;
}



server{
    listen 443;
    ssl on;
    keepalive_timeout   70;

    ssl_certificate /etc/nginx/ssl/ideapad.pem;
    ssl_certificate_key /etc/nginx/ssl/ideapad.pem;
    ssl_dhparam /etc/nginx/ssl/dhparams.pem;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers 'ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:DHE-DSS-AES128-GCM-SHA256:kEDH+AESGCM:ECDHE-RSA-AES128-SHA256:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA:ECDHE-ECDSA-AES128-SHA:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA:ECDHE-ECDSA-AES256-SHA:DHE-RSA-AES128-SHA256:DHE-RSA-AES128-SHA:DHE-DSS-AES128-SHA256:DHE-RSA-AES256-SHA256:DHE-DSS-AES256-SHA:DHE-RSA-AES256-SHA:AES128-GCM-SHA256:AES256-GCM-SHA384:AES128-SHA256:AES256-SHA256:AES128-SHA:AES256-SHA:AES:CAMELLIA:DES-CBC3-SHA:!aNULL:!eNULL:!EXPORT:!DES:!RC4:!MD5:!PSK:!aECDH:!EDH-DSS-DES-CBC3-SHA:!EDH-RSA-DES-CBC3-SHA:!KRB5-DES-CBC3-SHA';
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;

    server_name ideapad;

    root /var/www/cashhero/lottery.localhost/public_html;
    index index.php index.html index.htm;

    access_log /var/log/nginx/cashhero/ssl_access.log;
    error_log  /var/log/nginx/cashhero/ssl_error.log;

	location / {
		index index.php index.html index.htm;
		rewrite ^([^.]*[^/])$ $1/ permanent;
		fastcgi_split_path_info ^(.+\.php)(/.+)$;
		try_files $uri $uri/ /index.php =404;
		include fastcgi_params;
		fastcgi_pass unix:/var/run/php5-fpm.sock;
		fastcgi_index index.php;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_param ENVIRONMENT "prod";
		fastcgi_intercept_errors on;
	}
	location ~ .php$ {
		try_files $uri =404;
		fastcgi_pass unix:/var/run/php5­fpm.soc;
		fastcgi_index index.php;
		include fastcgi_params;
	}
	location ~*\.(js|css|png|jpg|gif|pdf|mp3|mp4|avi|mpeg|mpg|mkv|mov|flv|swf|wav|php|txt|fonts|eot|svg|ttf|woff|ico)$ {
		include /etc/nginx/mime.types;
		try_files $uri =404;
	}


}
